<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.great.mapping.ExamInterface">
	<!-- 随机获取选择题 -->
	<select id="getRadio" resultType="com.great.entity.Radio">
		select * from tbl_radio order
		by rand() limit #{0}
	</select>
	<!-- 随机获取判断题 -->
	<select id="getChoose" resultType="com.great.entity.Choose">
		select * from tbl_choose order
		by rand() limit #{0}
	</select>
	<!-- 添加选择题 -->
	<insert id="addRadio" parameterType="com.great.entity.Radio">
		insert tbl_radio
		(radio_title,radio_optionA,radio_optionB,radio_optionC,radio_optionD,radio_answer)values
		(#{radio_title},#{radio_optionA},#{radio_optionB},#{radio_optionC},#{radio_optionD},#{radio_answer})
	</insert>
	<!-- 添加判断题 -->
	<insert id="addChoose" parameterType="com.great.entity.Choose">
		insert tbl_radio
		(choose_name,choose_true)values
		(#{choose_name},#{choose_true})
	</insert>
</mapper>