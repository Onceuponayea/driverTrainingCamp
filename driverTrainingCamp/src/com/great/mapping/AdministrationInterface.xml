<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.great.mapping.AdministrationInterface">

	<!-- 添加日志 -->
	<insert id="insertLogInfo" parameterType="com.great.entity.Log">
		insert into
		tbl_log(log_detail, log_date, log_type)
		values(#{log_detail},
		#{log_date}, #{log_type})
	</insert>
	<!-- 查询日志 -->
	<select id="selectAllLog" resultType="com.great.entity.Log">
		select * from tbl_log
	</select>
	<!-- 修改日志 -->
	<update id="updateLogById" parameterType="com.great.entity.Log">
		update tbl_log set log_detail=#{log_detail}, log_date=#{log_date},
		log_type=#{log_type}
		<where>
			log_id=#{log_id}
		</where>
	</update>
	<!-- 删除日志 -->
	<delete id="deleteLogById" parameterType="int">
		delete from tbl_log where
		log_id=#{log_id}
	</delete>
	<!-- 添加参数 -->
	<insert id="insertParam" parameterType="com.great.entity.Param">
		insert into
		tbl_param(param_title, param_detail)
		values(#{param_title},
		#{param_detail})
	</insert>
	<!-- 查询参数 -->
	<select id="selectAllParam" resultType="com.great.entity.Param">
		select * from tbl_param
	</select>
	<!-- 修改参数 -->
	<update id="updateParamById" parameterType="com.great.entity.Param">
		update tbl_param set param_title=#{param_title},
		param_detail=#{param_detail}
		<where>
			param_id=#{param_id}
		</where>
	</update>
	<!-- 删除参数 -->
	<delete id="deleteParamById" parameterType="int">
	delete from tbl_param
	where param_id=#{param_id}
	</delete>

</mapper>