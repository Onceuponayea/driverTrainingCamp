<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.great.mapping.EvaluateInterface">
	<!-- 获取驾校评价 -->
	<select id="getEvaSchool" resultType="com.great.entity.EvaSchool">
		select * from
		tbl_evaluate_school where school_id =#{0};
	</select>
	<!-- 获取教练评价 -->
	<select id="getEvaTheacher" resultType="com.great.entity.EvaSchool">
		select * from
		tbl_evaluate_theacher where teacher_id =#{0};
	</select>
	<!-- 添加驾校评价 -->
	<insert id="AddEvaSchool" parameterType="com.great.entity.EvaSchool">
		insert tbl_evaluate_school
		(school_id,evaluate_id,evaluate_school_content,evaluate_school_date)values
		(#{school_id},#{evaluate_id},#{evaluate_school_content},#{evaluate_school_date})
	</insert>
	<!-- 添加教练评价 -->
	<insert id="AddEvaTheacher" parameterType="com.great.entity.EvaSchool">
		insert tbl_evaluate_theacher
		(teacher_id,evaluate_id,evaluate_theacher_content,evaluate_theacher_date)values
		(#{teacher_id},#{evaluate_id},#{evaluate_theacher_content},#{evaluate_theacher_date})
	</insert>
</mapper>